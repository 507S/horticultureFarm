<%- include('../../../includes/header')-%>
        <div class="wrapper">
          <%- include('../../../includes/topbar')-%>
            <div class="page-wrap">
              <%- include('../../../includes/sidebar')-%>
              <div class="main-content">
                <div class="container-fluid">
                    <div class="row clearfix">
                    <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                <div class="panel-title"><h2>শ্রমিকের তথ্য ফর্ম</h2></div>
                                <p><%
                                if(success !=''){ %>
                                <%= success %>
                                    <% } %>
                                </p>
                                </div>  
                            <div class="panel-body" >
                                <form action="/center/workerInfoForms" id="FieldTrialForm" class="form-horizontal" method="post"  role="form">
                                    <div id="signupalert" style="display:none" class="alert alert-danger">
                                        <p>Error:</p>
                                        <span></span>
                                    </div>
                                    <% if(messages.message){ %>
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <strong><%= messages.message %></strong>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    <% } %>

                                    <div class="form-group">
                                        <div class="col-md-9">
                                            <label for="podobi">পদবী :</label>
                                        <select id="podobi" name="podobi" required>
                                            <option value="নিয়মিত">নিয়মিত</option>
                                            <option value="অনিয়মিত">অনিয়মিত</option>
                                        </select>
                                        </div>
                                    </div>
                                        
                                    <div class="form-group">
                                        <label for="name" class="col-md-3 control-label">নাম</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" name="name" placeholder="নাম">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="fname" class="col-md-3 control-label">পিতার নাম</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" name="fname" placeholder="পিতার নাম">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="address" class="col-md-3 control-label">ঠিকানা</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" name="address" placeholder="ঠিকানা">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="mobile" class="col-md-3 control-label">মোবাইল নং</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" name="mobile" placeholder="মোবাইল নং">
                                        </div>
                                    </div>
                                    
                                    <div class="form-group">
                                        <label for="date" class="col-md-3 control-label">সেন্টারে যোগদানের তারিখ</label>
                                        <div class="col-md-9">
                                            <input type="date" class="form-control" name="date" placeholder="সেন্টারে যোগদানের তারিখ">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="nid" class="col-md-3 control-label">এনআইডি নং</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" name="nid" placeholder="এনআইডি নং">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="bank" class="col-md-3 control-label">ব্যাংক একাউন্ট নং</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" name="bank" placeholder="ব্যাংক একাউন্ট নং">
                                        </div>
                                    </div>

                                  
                                   

                                    <div class="form-group">
                                        <div class="col-md-9">
                                            <input type="hidden" class="form-control" name="user_id" placeholder="id" value="<%= user_id %>" >
                                        </div>
                                    </div>
                                    
                                    <div class="form-group">
                                        <!-- Button -->                                        
                                        <div class="col-md-offset-3 col-md-9">
                                        <input type="submit" name="submit" value="submit" class="btn btn-primary">   
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-offset-3 col-md-9">
                                    <button> <a href="/center/workerInfo" class="col-md-offset-3 col-md-9">Finish Submitting Report</a>
                                     </button>
                                     </div>
                                        
                                    
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('../../../includes/footer')-%>