<%- include('../../includes/header')-%>
        <div class="wrapper">
          <%- include('../../includes/topbar')-%>
            <div class="page-wrap">
              <%- include('../../includes/sidebar')-%>
              <div class="main-content">
                <div class="container-fluid">
                    <div class="row clearfix">
                    <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                <div class="panel-title"><h2>ঋণ বিতরণ ও আদায় এর অগ্রগতির প্রতিবেদন ফর্ম</h2></div>
                                <p><%
                                if(success !=''){ %>
                                <%= success %>
                                    <% } %>
                                </p>
                                </div>  
                            <div class="panel-body" >
                                <form action="/center/loanForms" id="FieldTrialForm" class="form-horizontal" method="post"  role="form">
                                    <div id="signupalert" style="display:none" class="alert alert-danger">
                                        <p>Error:</p>
                                        <span></span>
                                    </div>
                                    <% if(messages.message){ %>
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <strong><%= messages.message %></strong>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    <% } %>
                                        
                                    <div class="form-group">
                                        <label for="boraddo" class="col-md-3 control-label">ঋণ বাবদ বরাদ্দ অর্থ</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" name="boraddo" placeholder="ঋণ বাবদ বরাদ্দ অর্থ">
                                        </div>
                                    </div>
                                    
                                    <div class="form-group">
                                        <label for="bitoron1" class="col-md-3 control-label">বিগত অর্থবছরে বিতরণকৃত অর্থের পরিমাণ</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" name="bitoron1" placeholder="বিগত অর্থবছরে বিতরণকৃত অর্থের পরিমাণ">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="aday1" class="col-md-3 control-label">বিগত অর্থবছরে আদায়কৃত টাকার পরিমাণ</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" name="aday1" placeholder="বিগত অর্থবছরে আদায়কৃত টাকার পরিমাণ">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="left1" class="col-md-3 control-label">বিগত অর্থবছরে অবশিষ্ট টাকার পরিমাণ</label>
                                        <div class="col-md-9">
                                        <input type="text" class="form-control" name="left1" placeholder="বিগত অর্থবছরে অবশিষ্ট টাকার পরিমাণ">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="bitoron2" class="col-md-3 control-label">চলতি অর্থবছরে বিতরণকৃত অর্থের পরিমাণ</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" name="bitoron2" placeholder="চলতি অর্থবছরে বিতরণকৃত অর্থের পরিমাণ">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="aday2" class="col-md-3 control-label">চলতি অর্থবছরে আদায়কৃত টাকার পরিমাণ</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" name="aday2" placeholder="চলতি অর্থবছরে আদায়কৃত টাকার পরিমাণ">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="left2" class="col-md-3 control-label">চলতি অর্থবছরে অবশিষ্ট টাকার পরিমাণ</label>
                                        <div class="col-md-9">
                                        <input type="text" class="form-control" name="left2" placeholder="চলতি অর্থবছরে অবশিষ্ট টাকার পরিমাণ">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="comment" class="col-md-3 control-label">মন্তব্য</label>
                                        <div class="col-md-9">
                                        <input type="text" class="form-control" name="comment" placeholder="মন্তব্য">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-9">
                                            <label for="year">বছর :</label>
                                        <select id="year" name="year" required>
                                            <option value="2017">২০১৭-১৮</option>
                                            <option value="2018">২০১৮-১৯</option>
                                            <option value="2019">২০১৯-২০</option>
                                            <option value="2020">২০২০-২১</option>
                                            <option value="2021">২০২১-২২</option>
                                            <option value="2022">২০২২-২৩</option>
                                        </select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-9">
                                            <input type="hidden" class="form-control" name="user_id" placeholder="id" value="<%= user_id %>" >
                                        </div>
                                    </div>
                                    
                                    <div class="form-group">
                                        <!-- Button -->                                        
                                        <div class="col-md-offset-3 col-md-9">
                                        <input type="submit" name="submit" value="submit" class="btn btn-primary">   
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-offset-3 col-md-9">
                                    <button> <a href="/center/loan" class="col-md-offset-3 col-md-9">Finish Submitting Report</a>
                                     </button>
                                     </div>
                                        
                                    
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('../../includes/footer')-%>