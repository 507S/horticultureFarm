                        if(value.type === 'suchokMaan'){
                            $('#shuchokMaan').append('<option value="'+value.id+'">' + value.name + '</option>');
                        }
                    });
                }else {
                    $('#ekok').empty();
                }
            },
            complete: function() {
                $('#loading').hide();
                $('#output').show();
            }
        });
    });
    

