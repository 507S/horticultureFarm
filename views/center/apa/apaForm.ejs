                        $('#work').append('<option value="'+value.id+'">' + value.name + '</option>');
                    });
                }else {
                    $('#work').empty();
                }
            },
            complete: function() {
                $('#loading').hide();
                $('#output').show();
            }
        });
    });

    $('#work').on("change click",function () {
