<%if (records.length >0){ %>
    <table class="table table-bordered table-striped" id="tblCustomers" cellspacing="0" cellpadding="0">
    <thead>
    <tr>
        <th>আইটেমের নাম</th>
        <th>পরিমাণ (সংখ্যা/কেজি/লিটার)</th>
        <th>২০১৭-১৮ অর্থবছরে অনুমোদিত বিক্রয়মূল্য</th>
        <th>২০১৮-১৯ অর্থবছরে অনুমোদিত বিক্রয়মূল্য</th>
        <th>২০১৯-২০ অর্থবছরে অনুমোদিত বিক্রয়মূল্য</th>
        <th>পরিবর্তন/মুছুন</th>
    </tr>
    </thead>
    <tbody>
        <% records.forEach(function(row){ %>
            <tr>
                <td><%= row.item %></td>
                <td><%= row.amount %></td>
                <td><%= row.shotero %></td>
                <td><%= row.atharo %></td>
                <td><%= row.unish %></td>
                
                
               
                <td><a class="btn btn-primary btn-xs" href="/edit/<%= row.id %>"><i class="fa fa-edit"></i></a>
                    <a class="btn btn-danger btn-xs" href="/delete/<%= row.id %>"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
<% }else{ %>
    <table class="table table-bordered table-striped" id="tblCustomers" cellspacing="0" cellpadding="0">
        <thead>
        <tr>
            <th>আইটেমের নাম</th>
            <th>পরিমাণ (সংখ্যা/কেজি/লিটার)</th>
            <th>২০১৭-১৮ অর্থবছরে অনুমোদিত বিক্রয়মূল্য</th>
            <th>২০১৮-১৯ অর্থবছরে অনুমোদিত বিক্রয়মূল্য</th>
            <th>২০১৯-২০ অর্থবছরে অনুমোদিত বিক্রয়মূল্য</th>
            <th>পরিবর্তন/মুছুন</th>
        </tr>
        </thead>
        <tbody>
        <% records.forEach(function(row){ %>
            <tr>
                <td colspan="10">No data Found</td>
            </tr>
        <% }) %>
        </tbody>
    </table>
<% } %>