                                        <label for="sept1" class="col-md-3 control-label">সেপ্টে</label>
                                        <div class="col-md-9">
                                            <input type="number" class="form-control" name="sept1" value="0" placeholder="সেপ্টে">
                                        </div>
                                    </div>

                                    <div class="form-group">
