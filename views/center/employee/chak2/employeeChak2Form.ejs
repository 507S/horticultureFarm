<%- include('../../../includes/header')-%>
        <div class="wrapper">
          <%- include('../../../includes/topbar')-%>
            <div class="page-wrap">
              <%- include('../../../includes/sidebar')-%>
              <div class="main-content">
                <div class="container-fluid">
                    <div class="row clearfix">
                    <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                <div class="panel-title"><h2>হরটিকালচার সেন্টারের কর্মকতা/কর্মচারীদের মঞ্জুরীকৃত পদ ও শুণ্য পদের সংখ্যা ফর্ম</h2></div>
                                <p><%
                                if(success !=''){ %>
                                <%= success %>
                                    <% } %>
                                </p>
                                </div>  
                            <div class="panel-body" >
                                <form action="/center/chak2Forms" id="FieldTrialForm" class="form-horizontal" method="post"  role="form">
                                    <div id="signupalert" style="display:none" class="alert alert-danger">
                                        <p>Error:</p>
                                        <span></span>
                                    </div>

                                    <div class="form-group">
                                        <label for="name" class="col-md-3 control-label">পদের নাম</label>
                                        <div class="col-md-9">
                                            <select name="name" id="name" class="form-control">
                                                <option value="">পদের নাম</option>
                                                <% podobiLists.forEach(function(row){ %>
                                                    <% if (row.podobi != null) {%>
                                                        <option value=<%= row.podobi %>><%= row.podobi %></option>
                                                    <% } %>
                                                <% }) %>
                                            </select>
                                        </div>
                                    </div>
                                    
                                    <div class="form-group">
                                        <label for="grade" class="col-md-3 control-label">গ্রেড</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" name="grade" id="grade" placeholder="গ্রেড">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="pod" class="col-md-3 control-label">মঞ্জুরীকৃত পদ</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" name="pod" placeholder="মঞ্জুরীকৃত পদ">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="working" class="col-md-3 control-label">কর্মরত</label>
                                        <div class="col-md-9">
                                        <input type="text" class="form-control" name="working" placeholder="কর্মরত">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="shunno" class="col-md-3 control-label">শুন্যপদ</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" name="shunno" placeholder="শুন্যপদ">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="comment" class="col-md-3 control-label">মন্তব্য</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" name="comment" placeholder="মন্তব্য">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-9">
                                            <label for="month">মাস :</label>
                                        <select id="month" name="month" required>
                                            <option value="january">জানুয়ারি</option>
                                            <option value="february">ফেব্রুয়ারি</option>
                                            <option value="march">মার্চ</option>
                                            <option value="april">এপ্রিল</option>
                                            <option value="may">মে</option>
                                            <option value="june">জুন</option>
                                            <option value="july">জুলাই</option>
                                            <option value="august">আগস্ট</option>
                                            <option value="september">সেপ্টেম্বর</option>
                                            <option value="october">অক্টোবর</option>
                                            <option value="november">নভেম্বর</option>
                                            <option value="december">ডিসেম্বর</option>
                                        </select>
                                        </div>
                                    </div>
                                   
                                    <div class="form-group">
                                        <div class="col-md-9">
                                            <label for="year">বছর :</label>
                                        <select id="year" name="year" required>
                                            <option value="2017">২০১৭-১৮</option>
                                            <option value="2018">২০১৮-১৯</option>
                                            <option value="2019">২০১৯-২০</option>
                                            <option value="2020">২০২০-২১</option>
                                            <option value="2021">২০২১-২২</option>
                                            <option value="2022">২০২২-২৩</option>
                                        </select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-9">
                                            <input type="hidden" class="form-control" name="user_id" placeholder="id" value="<%= user_id %>" >
                                        </div>
                                    </div>
                                    
                                    <div class="form-group">
                                        <!-- Button -->                                        
                                        <div class="col-md-offset-3 col-md-9">
                                        <input type="submit" name="submit" value="submit" class="btn btn-primary">   
                                        </div>
                                    </div>
                                    
                                    
                                        
                                    
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('../../../includes/footer')-%>
<script>
    $('#name').on("change",function () {
        var podobi = $('#name').val();
        // alert(category)
        $.ajax({
            type: "POST",
            url: "/center/fetchPodobiList",
            data: {podobi: podobi},
            datatype: "json",
            beforeSend: function() {
                // setting a timeout
                $('#loading').show();
                $('#output').hide();
            },
            success: function (grade) {
                $("#grade").val(grade);
            },
            complete: function() {
                $('#loading').hide();
                $('#output').show();
            }
        });
    });    
</script>