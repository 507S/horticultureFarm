                                <th>জাত এর নাম</th>
                               <th>পরিবর্তন</th>
                            </tr>
                            </thead>
                            <tbody>
                                <% mainCategorys.forEach(function(mainRow){ %>
                                    <tr>
                                        <td>
                                            <%= mainRow.name %>
                                        </td>
                                        <td> 
                                        <% subCategorys.forEach(function(subRow){ %>
                                           
                                        <%if (mainRow.id === subRow.parent_id){ %>
                                            <%= subRow.name %>  
                                            <td>
                                                
                                            </td>                                   
                                        <% } %>
                                        <% }) %>
                                        </td> 
                                        <td></td>
                                        <td></td>
                                        <td><a class="btn btn-primary btn-xs" href="/pd/newKhorochTableEdit/<%= mainRow.id %>"><i class="fa fa-edit"></i></a>
                                        </td>                                                                           
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                        <% }else{ %>
                            <table class="table table-bordered table-striped" id="tblCustomers" cellspacing="0" cellpadding="0">
                                <thead>
                                <tr>
                                    <th>ক্রমিক নং</th>
                                <th>ক্যাটাগরির নাম</th>
                                
                                </tr>
                                </thead>
                                <tbody>
                                <% records.forEach(function(row){ %>
                                    <tr>
                                        <td colspan="10">No data Found</td>
                                    </tr>
                                <% }) %>
                                </tbody>
                            </table>
                        <% } %>

                    </div>                 
                </div>

                
            </div>
        </div>
    </div>

    <%- include('../../includes/footer')-%>
