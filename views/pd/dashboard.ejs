<%- include('../includes/header')-%>
<div class="wrapper">
    <%- include('../includes/topbar')-%>

    <div class="page-wrap">
        <%- include('../includes/sidebar')-%>
        <div class="main-content">
            <div class="container-fluid">
                <div class="row clearfix">
                    <div class="col">
                        <select id="center" class="form-control">
                            <option value="all">সব  সেন্টার</option>
                            <% center.forEach((row) => { %>
                                <option value="<%= row.id %>"> <%= row.uname %> </option>
                            <%  }) %>
                        </select>
                    </div>
                    <div class="col ">
                        <div class="widget">
                            <div class="widget-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="state">
                                        <h6>চারা উৎপাদন</h6>
                                        <h4 id="totalProduction"><%= new Number(totalProduction).toLocaleString("bn-BD") %></h4>
                                    </div>
                                    <div class="icon">
                                        <i class="ik ik-award"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col ">
                        <div class="widget">
                            <div class="widget-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="state">
                                        <h6>চারা বিতরণ</h6>
                                        <h4 id="totalBitoron"> <%= new Number(totalBitoron).toLocaleString("bn-BD") %> </h4>
                                    </div>
                                    <div class="icon">
                                        <i class="ik ik-award"></i>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                    <div class="col ">
                        <div class="widget">
                            <div class="widget-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="state">
                                        <h6>চারা সংরক্ষণ/মজুদ</h6>
                                        <h4 id="totalMojud"><%= new Number(totalMojud).toLocaleString("bn-BD") %></h4>
                                    </div>
                                    <div class="icon">
                                        <i class="ik ik-award"></i>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="col ">
                        <div class="widget">
                            <div class="widget-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="state">
                                        <h6>রাজস্ব আয়</h6>
                                        <h4>৮০০০০০০ টাকা</h4>
                                    </div>
                                    <div class="icon">
                                        <i class="ik ik-award"></i>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="container-fluid">
                        <!--    main catg -->
                        <div class="card">
                            <div class="card-body">
                                <form action="/pd/add/mainCategory" method="post">
                                    <div class="form-row">
                                        <div class="col">
                                            <label for="">Main Category</label>
                                            <input type="text"  id="mainCatg" name="mainCatg" class="form-control">
                                        </div>
                                        <div class="col">
                                            <label for=""></label>
                                            <input type="submit" value="Add Main Category" class="form-control">
                                        </div>

                                        <div class="col">
                                            <% crop.forEach((row) => {
                                            if (row.type === 'mainCategory'){
                                            %>
                                                <p> <%= row.name %> </p>
                                            <%
                                            }
                                            })
                                            %>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <!--  sub catg -->
                        <div class="card">
                            <div class="card-body">
                                <form action="/pd/add/subcategory" method="post">
                                    <div class="form-row">
                                        <div class="col">
                                            <label for="">Main Category</label>
                                            <select class="form-control" id="main_category" name="category">
                                                <option selected> Select a Category </option>
                                                <% crop.forEach((row) => {
                                                if (row.type === 'mainCategory'){
                                                %>
                                                    <option value="<%= row.id %>"> <%= row.name %> </option>
                                                <%
                                                }
                                                })
                                                %>
                                            </select>
                                        </div>
                                        <div class="col">
                                            <label for="">Sub Category</label>
                                            <input type="text"  id="sub_category" name="sub_category" class="form-control">
                                        </div>
                                        <div class="col">
                                            <label for=""></label>
                                            <input type="submit" value="Add সাব-ক্যাটাগরি" class="form-control">
                                        </div>
                                        <div class="col">
                                            <% crop.forEach((row) => {
                                            if (row.type === 'subCategory'){
                                            %>
                                                <p> <%= row.name %> </p>
                                            <%
                                            }
                                            })
                                            %>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <!--  biboron -->
                        <div class="card">
                            <div class="card-body">
                                <form action="/pd/add/biboron" method="post">
                                    <div class="form-row">
                                        <div class="col">
                                            <label for="">Subcategory</label>
                                            <select class="form-control" id="sub_category_list" name="subcategory">
                                                <option selected> Select a Sub Category </option>
                                                <% crop.forEach((row) => {
                                                if (row.type === 'subCategory'){
                                                %>
                                                    <option value="<%= row.id %>"> <%= row.name %> </option>
                                                <%
                                                }
                                                })
                                                %>
                                            </select>
                                        </div>
                                        <div class="col">
                                            <label for="">Biboron</label>
                                            <input type="text" id="biboron" name="biboron" class="form-control">
                                        </div>
                                        <div class="col">
                                            <label for=""></label>
                                            <input type="submit" value="Add বিবরণ" class="form-control">
                                        </div>
                                        <div class="col">
                                            <% crop.forEach((row) => {
                                            if (row.type === 'biboron'){
                                            %>
                                                <p> <%= row.name %> </p>
                                            <%
                                            }
                                            })
                                            %>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <!--   jaat -->
                        <div class="card">
                            <div class="card-body">
                                <form action="/pd/add/jaat" method="post">
                                    <div class="form-row">
                                        <div class="col">
                                            <label for="">Biboron</label>
                                            <select class="form-control" id="biboron_list" name="biboron">
                                                <option selected> Select a Biboron </option>
                                                <% crop.forEach((row) => {
                                                if (row.type === 'biboron'){
                                                %>
                                                    <option value="<%= row.id %>"> <%= row.name %> </option>
                                                <%
                                                }
                                                })
                                                %>
                                            </select>
                                        </div>
                                        <div class="col">
                                            <label for="">Jaat</label>
                                            <input type="text" id="jaat" name="jaat" class="form-control">
                                        </div>
                                        <div class="col">
                                            <label for=""></label>
                                            <input type="submit" class="form-control" value="Add জাত">
                                        </div>
                                        <div class="col">
                                            <% crop.forEach((row) => {
                                            if (row.type === 'jat'){
                                            %>
                                                <p> <%= row.name %> </p>
                                            <%
                                            }
                                            })
                                            %>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../includes/footer')-%>
<script type="text/javascript">
    $('#center').on("change",function () {
        var center = $('#center').val();
        $.ajax({
            type: "POST",
            url: "/centerData",
            data: {center: center},
            datatype: "json",
            beforeSend: function() {
                // setting a timeout
                $('#loading').show();
                $('#output').hide();
            },
            success: function (data) {
                $('#totalProduction').html(new Number(data.totalProduction).toLocaleString("bn-BD"));
                $('#totalBitoron').html(new Number(data.totalBitoron).toLocaleString("bn-BD"));
                $('#totalMojud').html(new Number(data.totalMojud).toLocaleString("bn-BD"));
            },
            complete: function() {
                $('#loading').hide();
                $('#output').show();
            }
        });
    });
</script>