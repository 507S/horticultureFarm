<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>সেন্টারসমূহের তথ্য</title>

    <style>
        .flex-container {
            display: flex;

            justify-content: center
        }
        .table, td, th {
            border: 1px solid black;
        }
        .table {
            width: 100%;
            border-collapse: collapse;
        }
        .center {
            text-align: center;
        }
        .inline-block-child {
            display: inline-block;
        }
    </style>
</head>
<body>

<div style="margin-top: 5px; padding-top: 5px; padding-bottom: 5px; background-color: #ffffffa6;" class="center">
    <div>
        <h1>সেন্টারসমূহের তথ্য</h1>
        <%if (records.length >0){ %>
            <table class="table table-bordered table-striped" id="tblCustomers" cellspacing="0" cellpadding="0">
            <thead>
            <tr>
                <!-- <th>ক্রমিক নং</th> -->
                <th>সেন্টারের নাম</th>
                <th>কর্মকর্তার নাম</th>
                <th>পদবী</th>
                <th>মোবাইল নং</th>
                <th>ই-মেইল</th>
            </tr>
            </thead>
            <tbody>
                <% records.forEach(function(row,index){ %>
                    <tr>
                        <td><%= row.center %></td>
                        <td><%= row.kormokorta %></td>
                        <td><%= row.podobi %></td>
                        <td><%= row.mobile %></td>
                        <td><%= row.email %></td>
                      
                       
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <% }else{ %>
            <table class="table table-bordered table-striped" id="tblCustomers" cellspacing="0" cellpadding="0">
                <thead>
                <tr>
                    <th>সেন্টারের নাম</th>
                    <th>কর্মকর্তার নাম</th>
                    <th>পদবী</th>
                    <th>মোবাইল নং</th>
                    <th>ই-মেইল</th>
                </tr>
                </thead>
                <tbody>
                <% records.forEach(function(row){ %>
                    <tr>
                        <td colspan="10">No data Found</td>
                    </tr>
                <% }) %>
                </tbody>
            </table>
        <% } %>
    </div>
</div>

</body>
</html>