<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>শ্রমিকের তথ্য</title>

  <style>
    .flex-container {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    .flex-container h5 {
      padding: 0;
      margin: 0;
    }

    .table,
    td,
    th {
      border: 1px solid black;
    }

    .table {
      width: 100%;
      border-collapse: collapse;
    }

    .center {
      text-align: center;
    }

    .inline-block-child {
      display: inline-block;
    }

    .header {
      display: flex;
      width: 100%;
    }

    .header>* {
      width: 33%;
    }

    .row {
      display: flex;
      width: 100%;
    }

    .row>* {
      width: 50%;
    }
  </style>
</head>

<body>
  <div style="margin-top: 5px; padding-top: 5px; padding-bottom: 5px; background-color: #ffffffa6;" class="center">
    <div>
      <div class="header">
        <div>
          <img src="/images/bd.png" width="100" alt="bd">
        </div>
        <div class="flex-container">
          <h5>গণপ্রজাতন্ত্রী বাংলাদেশ সরকার</h5>
          <h5>কৃষি সম্প্রসারণ অধিদপ্তর</h5>
          <h5>হর্টিকালচার উইং</h5>
        </div>
        <div>
          <img src="/images/dae.jpg" width="100" alt="dae">
        </div>
      </div>
      <!-- <p><b>সেন্টার :</b>সকল সেন্টারের তথ্য</p> -->
      <div style="
            display: flex;
            flex-direction: row;
            flex-wrap: nowrap;
            justify-content: space-between;
          ">
        <p>স্মারক নংঃ</p>
        <p>তারিখঃ <%= new Date().toLocaleDateString();%></p>
      </div>
      <%if (centers.length >0){ %>
      <style>
        table,
        th,
        td {
          border: 1px solid black;
          border-collapse: collapse;
        }

        th,
        td {
          padding: 5px;
          text-align: left;
        }
      </style>
      <table class="table table-bordered table-striped" id="tblCustomers">
        <thead>
          <tr>
            <th>ক্রমিক নং</th>
            <th>সেন্টারের নাম</th>
            <th>পদবী</th>
            <th>নাম</th>
            <th>পিতার নাম</th>
            <th>ঠিকানা</th>
            <th>মোবাইল নং</th>
            <th>যোগদানের তারিখ</th>
            <th>এনআইডি নং</th>
            <th>জন্ম তারিখ</th>
            <th>ব্যাংক একাউন্ট নং</th>
          </tr>
        </thead>
        <tbody>
          <% centers.forEach(function(center,index){ %> <% var indexes=0%> <%
            var centerIndex=0;%> <% workerinfos.forEach(function(row){ %> <% if
            (center.id === row.center_id){%> <% centerIndex +=1;%> <%}}) %> <%
            workerinfos.forEach(function(row){ %> <% if (center.id ===
            row.center_id){%> <% if (indexes === 0){%>
          <tr>
            <td rowspan="<%=centerIndex%>"><%=index+1%></td>
            <td rowspan="<%=centerIndex%>"><%=center.center %></td>
            <td><%= row.podobi %></td>
            <td><%= row.name %></td>
            <td><%= row.fname %></td>
            <td><%= row.address %></td>
            <td><%= row.mobile %></td>
            <td><%= row.date %></td>
            <td><%= row.nid %></td>
            <td><%= row.birthDate %></td>
            <td><%= row.bank %></td>
          </tr>
          <% indexes+=1%> <%}else{%>
          <tr>
            <td><%= row.podobi %></td>
            <td><%= row.name %></td>
            <td><%= row.fname %></td>
            <td><%= row.address %></td>
            <td><%= row.mobile %></td>
            <td><%= row.date %></td>
            <td><%= row.nid %></td>
            <td><%= row.birthDate %></td>
            <td><%= row.bank %></td>
          </tr>
          <%} %> <%}}) %> <% }) %>
        </tbody>
      </table>
      <% }else{ %>
      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>ক্রমিক নং</th>
            <th>সেন্টারের নাম</th>

            <th>পদবী</th>
            <th>নাম</th>
            <th>পিতার নাম</th>
            <th>ঠিকানা</th>
            <th>মোবাইল নং</th>
            <th>যোগদানের তারিখ</th>
            <th>এনআইডি নং</th>
            <th>জন্ম তারিখ</th>
            <th>ব্যাংক একাউন্ট নং</th>
          </tr>
        </thead>
        <tbody>
          <% centers.forEach(function(center){ %>
          <tr>
            <td colspan="10">No data Found</td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% } %>
    </div>
  </div>
</body>

</html>