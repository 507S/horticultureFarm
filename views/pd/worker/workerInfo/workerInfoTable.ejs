<%if (records.length >0){ %>
    <table class="table table-bordered table-striped" id="tblCustomers" cellspacing="0" cellpadding="0">
    <thead>
    <tr>
        <th>ক্রমিক নং</th>
        <th>পদবী</th>
        <th>নাম</th>
        <th>পিতার নাম</th>
        <th>ঠিকানা</th>
        <th>মোবাইল নং</th>
        <th>যোগদানের তারিখ</th>
        <th>এনআইডি নং</th>
        <th>ব্যাংক একাউন্ট নং</th>
        <th>পরিবর্তন/মুছুন</th>
    </tr>
    </thead>
    <tbody>
        <% records.forEach(function(row,index){ %>
            <tr>
                <td><%= index+1 %></td>
                <td><%= row.podobi %></td>
                <td><%= row.name %></td>
                <td><%= row.fname %></td>
                <td><%= row.address %></td>
                <td><%= row.mobile %></td>
                <td><%= row.date %></td>
                <td><%= row.nid %></td>
                <td><%= row.bank %></td>
                <td><a class="btn btn-primary btn-xs" href="/center/workerInfoEdit/<%= row.id %>"><i class="fa fa-edit"></i></a>
                    <a class="btn btn-danger btn-xs" href="/center/workerInfoDelete/<%= row.id %>"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
<% }else{ %>
    <table class="table table-bordered table-striped" id="tblexportData" cellspacing="0" cellpadding="0">
        <thead>
        <tr>
            <th>ক্রমিক নং</th>
        <th>পদবী</th>
        <th>নাম</th>
        <th>পিতার নাম</th>
        <th>ঠিকানা</th>
        <th>মোবাইল নং</th>
        <th>যোগদানের তারিখ</th>
        <th>এনআইডি নং</th>
        <th>ব্যাংক একাউন্ট নং</th>
        </tr>
        </thead>
        <tbody>
        <% records.forEach(function(row){ %>
            <tr>
                <td colspan="10">No data Found</td>
            </tr>
        <% }) %>
        </tbody>
    </table>
<% } %>