<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>মাসিক রাজস্ব অর্থ প্রাপ্তির হিসাব</title>

    <style>
        .flex-container {
            display: flex;

            justify-content: center
        }
        .table, td, th {
            border: 1px solid black;
        }
        .table {
            width: 100%;
            border-collapse: collapse;
        }
        .center {
            text-align: center;
        }
        .inline-block-child {
            display: inline-block;
        }
    </style>
</head>
<body>

<div style="margin-top: 5px; padding-top: 5px; padding-bottom: 5px; background-color: #ffffffa6;" class="center">
    <div>
        <h1>মাসিক রাজস্ব অর্থ প্রাপ্তির হিসাব</h1>
        <p><b>সকল সেন্টারের তথ্য </p>
            <%if (centers.length >0){ %>
                <table class="table table-bordered table-striped" >
                <thead>
                <tr>
                    <th>ক্রমিক নং</th>
                        <th>সেন্টারের নাম</th>
                        <th>জুলাই</th>
                        <th>আগস্ট</th>
                        <th>সেপ্টে</th>
                        <th>অক্টো</th>
                        <th>নভে</th>
                        <th>ডিসে</th>
                        <th>জানু</th>
                        <th>ফেব্রু</th>
                        <th>মার্চ</th>
                         <th>এপ্রিল</th>
                        <th>মে</th>
                        <th>জুন</th>
                        <th>সর্বমোট</th>
                </tr>
                </thead>
                <tbody>
                    <% var subjuly1=0 %> 
                    <% var subaugust1=0 %> 
                    <% var subsept1=0 %> 
                    <% var suboct1=0 %> 
                    <% var subnov1=0 %> 
                    <% var subdec1=0 %> 
                    <% var subjan2=0 %> 
                    <% var subfeb2=0 %> 
                    <% var submarch2=0 %> 
                    <% var subapr2=0 %> 
                    <% var submay2=0 %> 
                    <% var subjune2=0 %> 
                    <% var subtotal=0 %> 
                    <% centers.forEach(function(center,index){ %>
                        <tr>
                        <td><%=index+1%></td>
                        <td><%=center.center %></td>
                            <% var july1=0;%>
                            <% var august1=0;%>
                            <% var sept1=0;%>
                            <% var oct1=0;%>
                            <% var nov1=0;%>
                            <% var dec1=0;%>
                            <% var jan2=0;%>
                            <% var feb2=0;%>
                            <% var march2=0;%>
                            <% var apr2=0;%>
                            <% var may2=0;%>
                            <% var june2=0;%>
                            <% var total=0;%>
                           <% records.forEach(function(row){ %>
                                <% if (center.id === row.center_id){%>
                                        <%  july1+=row.july1 %>
                                        <%  august1+=row.august1 %>
                                        <%  sept1+=row.sept1 %>
                                        <%  oct1+=row.oct1 %>
                                        <%  nov1+=row.nov1 %> %>
                                        <%  dec1+=row.dec1 %>
                                        <%  jan2+=row.jan2 %>
                                        <%  feb2+=row.feb2 %> %>
                                        <%  march2+=row.march2 %>
                                        <%  apr2+=row.apr2 %>
                                        <%  may2+=row.may2 %>
                                        <%  june2+=row.june2 %> %>
                                        <%  total+=row.total %>
            
                                <%}}) %>
            
                           
                            <td><%= july1 %></td>
                            <% subjuly1+=july1 %> 
                            <td><%= august1 %></td>
                            <% subaugust1+=august1 %> 
                            <td><%= sept1 %></td>
                            <% subsept1+=sept1 %> 
                            <td><%= oct1 %></td>
                            <% suboct1+=oct1 %> 
                            <td><%= nov1 %></td>
                            <% subnov1+=nov1 %> 
                            <td><%= dec1 %></td>
                            <% subdec1+=dec1 %> 
                            <td><%= jan2 %></td>
                            <% subjan2+=jan2 %> 
                            <td><%= feb2 %></td>
                            <% subfeb2+=feb2 %> 
                            <td><%= march2 %></td>
                            <% submarch2+=march2 %> 
                            <td><%= apr2 %></td>
                            <% subapr2+=apr2 %> 
                            <td><%= may2 %></td>
                            <% submay2+=may2 %> 
                            <td><%= june2 %></td>
                            <% subjune2+=june2 %> 
                            <td><%= total %></td>
                            <% subtotal+=total %> 
                         
                        </tr>
                        <% }) %>
                        <tr>
                            <td colspan="2">মোটঃ সকল সেন্টারের তথ্য</td>
                            <td><%= subjuly1 %></td>
                            <td><%= subaugust1 %></td>
                            <td><%= subsept1 %></td>
                            <td><%= suboct1 %></td>
                            <td><%= subnov1 %></td>
                            <td><%= subdec1 %></td>
                            <td><%= subjan2 %></td>
                            <td><%= subfeb2 %></td>
                            <td><%= submarch2 %></td>
                            <td><%= subapr2 %></td>
                            <td><%= submay2 %></td>
                            <td><%= subjune2 %></td>
                            <td><%= subtotal %></td>
                
                
                        </tr>
                </tbody>
            </table>
            <% }else{ %>
                <table class="table table-bordered table-striped" >
                    <thead>
                    <tr>
                        <th>ক্রমিক নং</th>
                        <th>সেন্টারের নাম</th>
                        <th>জুলাই</th>
                        <th>আগস্ট</th>
                        <th>সেপ্টে</th>
                        <th>অক্টো</th>
                        <th>নভে</th>
                        <th>ডিসে</th>
                        <th>জানু</th>
                        <th>ফেব্রু</th>
                        <th>মার্চ</th>
                         <th>এপ্রিল</th>
                        <th>মে</th>
                        <th>জুন</th>
                        <th>সর্বমোট</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% centers.forEach(function(row){ %>
                        <tr>
                            <td colspan="10">No data Found</td>
                        </tr>
                    <% }) %>
                    </tbody>
                </table>
            <% } %>
    </div>
</div>

</body>
</html>